{
   "name": "TypescriptPractice",
   "version": "1.0.0",
   "description": "使用工具 TypeORM / Express / TypeScript / PostgresSQL 簡單 API",
   "devDependencies": {
      "@types/bcrypt": "^5.0.2",
      "@types/body-parser": "^1.19.5",
      "@types/cors": "^2.8.17",
      "@types/express": "^4.17.21",
      "@types/jsonwebtoken": "^9.0.6",
      "@types/node": "^20.14.11",
      "@types/pg": "^8.11.6",
      "@types/swagger-ui-express": "^4.1.6",
      "jest": "^29.7.0",
      "supertest": "^7.0.0",
      "ts-jest": "^29.2.3",
      "ts-node": "10.9.1",
      "typescript": "^5.5.3"
   },
   "dependencies": {
      "@ts-rest/core": "^3.45.2",
      "@ts-rest/express": "^3.45.2",
      "@ts-rest/open-api": "^3.45.2",
      "@types/jest": "^29.5.12",
      "@types/supertest": "^6.0.2",
      "bcrypt": "^5.1.1",
      "body-parser": "^1.20.2",
      "cors": "^2.8.5",
      "dotenv": "^16.4.5",
      "express": "^4.19.2",
      "joi": "^17.13.3",
      "jsonwebtoken": "^9.0.2",
      "nodemon": "^3.1.4",
      "pg": "^8.12.0",
      "reflect-metadata": "^0.1.14",
      "swagger-autogen": "^2.23.7",
      "swagger-ui-express": "^5.0.1",
      "typeorm": "^0.3.20",
      "zod": "^3.23.8"
   },
   "scripts": {
      "dev": "set NODE_ENV=development&& pnpm nodemon src/index.ts",
      "start": "set NODE_ENV=production&&node ./dist/index.js",
      "build": "set NODE_ENV=production&&pnpm tsc",
      "test": "set NODE_ENV=test&& pnpm jest",
      "test:watch": "set NODE_ENV=test&& pnpm jest --watch",
      "coverage": "set NODE_ENV=test&& pnpm jest --coverage",
      "typeorm": "pnpm typeorm-ts-node-commonjs",
      "migration:run": "pnpm ts-node ./node_modules/typeorm/cli.js migration:run -d ./src/data-source.ts",
      "migration:revert": "pnpm ts-node ./node_modules/typeorm/cli.js migration:revert -d ./src/data-source.ts",
      "migration:show": "npm run typeorm migration:show -- -d src/data-source.ts",
      "migration:generate": "npm run typeorm migration:generate -- -d src/data-source.ts",
      "migration:create": "npm run typeorm migration:create"
   }
}