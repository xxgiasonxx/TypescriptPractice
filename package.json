{
   "name": "TypescriptPractice",
   "version": "1.0.0",
   "description": "使用工具 TypeORM / Express / TypeScript / PostgresSQL 簡單 API",
   "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/node": "^16.18.101",
      "jest": "^29.7.0",
      "ts-node": "10.9.1",
      "typescript": "^4.9.5"
   },
   "dependencies": {
      "@ts-rest/core": "^3.45.2",
      "@ts-rest/express": "^3.45.2",
      "@ts-rest/open-api": "^3.45.2",
      "@types/bcrypt": "^5.0.2",
      "@types/body-parser": "^1.19.5",
      "@types/cors": "^2.8.17",
      "@types/jsonwebtoken": "^9.0.6",
      "@types/swagger-ui-express": "^4.1.6",
      "bcrypt": "^5.1.1",
      "body-parser": "^1.20.2",
      "cors": "^2.8.5",
      "dotenv": "^16.4.5",
      "express": "^4.19.2",
      "jsonwebtoken": "^9.0.2",
      "nodemon": "^3.1.4",
      "pg": "^8.4.0",
      "reflect-metadata": "^0.1.14",
      "swagger-ui-express": "^5.0.1",
      "typeorm": "^0.3.20",
      "zod": "^3.23.8"
   },
   "scripts": {
      "dev": "pnpm nodemon src/index.ts",
      "start": "node ./dist/index.js",
      "build": "pnpm tsc",
      "typeorm": "pnpm typeorm-ts-node-commonjs",
      "migration:run": "pnpm ts-node ./node_modules/typeorm/cli.js migration:run -d ./src/data-source.ts",
      "migration:revert": "pnpm ts-node ./node_modules/typeorm/cli.js migration:revert -d ./src/data-source.ts",
      "migration:show": "npm run typeorm migration:show -- -d src/data-source.ts",
      "migration:generate": "npm run typeorm migration:generate -- -d src/data-source.ts",
      "migration:create": "npm run typeorm migration:create"
   }
}