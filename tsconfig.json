{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2021",
         "dom"
      ],
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "strictPropertyInitialization": false,
      "strict": true,
      "resolveJsonModule": true
   }
}